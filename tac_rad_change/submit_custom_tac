#!/bin/bash
#PBS -l walltime=10:00:00
#PBS -l ncpus=4
#PBS -q normal
#PBS -P w40
#PBS -l storage=gdata/hh5+gdata/w40+scratch/w40+gdata/access
#PBS -l mem=150gb
#PBS -N create_custom_tac

name=best_1
dir=/g/data3/w40/dm5220/ancil/user_mlevel/tac_rad_change
file=${dir}/${name}
i=1
while [[ -f ${file} ]]
do
    ((i++))
    name=best_${i}
    file=${dir}/${name}
done
python3 /g/data/w40/dm5220/scripts/tac_rad_change/create_custom_tac.py "$name"

script=/g/data/w40/dm5220/scripts/tac_rad_change/xancil.namelist_custom
cat > $script <<EOS
&nam_config
  ICAL = 2,
  ISIZE = 64,
  L32BIT = .FALSE.,
  VERSION = 7.3,
  LBIGENDOUT = .TRUE.,
  LWFIO = .TRUE.,
  IWFIO_SIZE = 2048,
  NNCFILES = 1
  NCFILES = "${dir}/files_for_xancil/${name}.nc"
 /

 &nam_gridconfig
  LVARGRID = .FALSE.,
  IAVERT = 1,
  NLEV = 38,
  NO3LEV = 38,
  LLEVSTOREUP = .TRUE.,
  NAM_VERT = "/g/data/access/projects/access/umdir/vn7.3/ctldata/vert/vertlevs_G3",
  IOVERT = 0,
  LDEEPSOIL = .FALSE.
 /

 &nam_ozone
 /

 &nam_smow
 /

