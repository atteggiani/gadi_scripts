  LAUSRMULTI_THETA(1) = .TRUE.
  IAUSRMULTI_GRIDTYPE(1) = 1,
  IAUSRMULTI_DATATYPE(1) = 1,
  IAUSRMULTI_MASKTYPE(1) = 0,
  IAUSRMULTI_MASK(1) = 0,
