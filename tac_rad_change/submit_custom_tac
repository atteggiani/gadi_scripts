  IAUSRMULTI_TIMEUSAGE2 = 0,
  IAUSRMULTI_STARTDATE(1) = 0000,
  IAUSRMULTI_STARTDATE(2) = 1,
  IAUSRMULTI_STARTDATE(3) = 1,
  IAUSRMULTI_STARTDATE(4) = 0,
  IAUSRMULTI_STARTDATE(5) = 0,
  IAUSRMULTI_STARTDATE(6) = 0,
  IAUSRMULTI_NTIMES = 360,
